<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="121dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/stephen_curry" />
    <!--    아이디    -->
    <TextView
        android:id="@+id/info_emil_title"
        style="@style/InfoTitle"
        android:text="@string/email_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image" />
    <TextView
        android:id="@+id/info_email_description"
        style="@style/InfoDescription"
        android:text="id"
        app:layout_constraintEnd_toEndOf="@+id/info_emil_title"
        app:layout_constraintStart_toStartOf="@+id/info_emil_title"
        app:layout_constraintTop_toBottomOf="@+id/info_emil_title" />
    <!--    이름    -->
    <TextView
        android:id="@+id/info_name_title"
        style="@style/InfoTitle"
        android:text="@string/name_title"
        app:layout_constraintEnd_toEndOf="@+id/info_email_description"
        app:layout_constraintStart_toStartOf="@+id/info_email_description"
        app:layout_constraintTop_toBottomOf="@+id/info_email_description" />
    <TextView
        android:id="@+id/info_name_description"
        style="@style/InfoDescription"
        android:text="name"
        app:layout_constraintEnd_toEndOf="@+id/info_name_title"
        app:layout_constraintStart_toStartOf="@+id/info_name_title"
        app:layout_constraintTop_toBottomOf="@+id/info_name_title" />
    <!--    나이    -->
    <TextView
        android:id="@+id/info_age_title"
        style="@style/InfoTitle"
        android:text="@string/age_title"
        app:layout_constraintEnd_toEndOf="@+id/info_name_description"
        app:layout_constraintStart_toStartOf="@+id/info_name_description"
        app:layout_constraintTop_toBottomOf="@+id/info_name_description" />
    <TextView
        android:id="@+id/info_age_description"
        style="@style/InfoDescription"
        android:text="21"
        app:layout_constraintEnd_toEndOf="@+id/info_age_title"
        app:layout_constraintStart_toStartOf="@+id/info_age_title"
        app:layout_constraintTop_toBottomOf="@+id/info_age_title" />
    <!--    MBTI    -->
    <TextView
        android:id="@+id/info_mbti_title"
        style="@style/InfoTitle"
        android:text="@string/mbti_title"
        app:layout_constraintEnd_toEndOf="@+id/info_age_description"
        app:layout_constraintStart_toStartOf="@+id/info_age_description"
        app:layout_constraintTop_toBottomOf="@+id/info_age_description" />
    <TextView
        android:id="@+id/info_mbti_description"
        style="@style/InfoDescription"
        android:text="ESTJ"
        app:layout_constraintEnd_toEndOf="@+id/info_mbti_title"
        app:layout_constraintStart_toStartOf="@+id/info_mbti_title"
        app:layout_constraintTop_toBottomOf="@+id/info_mbti_title" />

    <Button
        android:id="@+id/button"
        style="@style/Button"
        android:layout_marginTop="108dp"
        android:text="종료"
        android:onClick="stop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_mbti_description" />
    <!--    MBTI    -->

</androidx.constraintlayout.widget.ConstraintLayout>